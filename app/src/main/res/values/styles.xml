<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AmountText">
        <item name="android:layout_width">376dp</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="congratText">
        <item name="android:layout_width">406dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="label_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="display_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AMOUNT_TEXT">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="form_label_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignStart">@+id/DonateFormDetails</item>
        <item name="android:layout_alignBottom">@+id/DonateFormDetails</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#EE000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="input_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_alignStart">@+id/name</item>
        <item name="android:layout_alignBottom">@+id/name</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:width">360dp</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">text|textPersonName|textCapWords</item>
        <item name="android:textColorHighlight">#AAAAAA</item>
    </style>
</resources>